{
    "_comment": "Benchmark System Beat Schedule",
    
    "benchmark-initialization": {
        "task": "packages.jobs.tasks.benchmark_initialization_task.benchmark_initialization_task",
        "schedule": {
            "crontab": {
                "minute": "0",
                "hour": "0",
                "day_of_month": "1"
            }
        },
        "description": "Monthly initialization/validation of benchmark schema tables"
    },
    
    "benchmark-daily-analytics-orchestrator": {
        "task": "packages.jobs.tasks.benchmark_orchestrator_task.benchmark_orchestrator_task",
        "schedule": {
            "crontab": {
                "minute": "0",
                "hour": "1",
                "day_of_week": "*"
            }
        },
        "args": ["analytics", "{{ today }}"],
        "description": "Daily orchestrator for analytics miners"
    },
    
    "benchmark-daily-ml-orchestrator": {
        "task": "packages.jobs.tasks.benchmark_orchestrator_task.benchmark_orchestrator_task",
        "schedule": {
            "crontab": {
                "minute": "0",
                "hour": "3",
                "day_of_week": "*"
            }
        },
        "args": ["ml", "{{ today }}"],
        "description": "Daily orchestrator for ML miners"
    }
}